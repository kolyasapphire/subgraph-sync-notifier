{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "lib": ["esnext", "dom"],
    "noEmit": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"],
  "ts-node": { "esm": true }
}
